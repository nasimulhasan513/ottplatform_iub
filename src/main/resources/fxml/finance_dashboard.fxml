<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="iub.ottplatform_iub.controller.FinanceDashboardController" 
      style="-fx-background-color: #f5f5f5;" spacing="20">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label fx:id="welcomeLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" 
                style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>

    <Label text="Finance Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 10;">
        <HBox spacing="10">
            <Label text="Total Users:" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            <Label fx:id="totalUsersLabel" style="-fx-font-size: 16px;"/>
        </HBox>
        <HBox spacing="10">
            <Label text="Total Revenue:" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            <Label fx:id="totalRevenueLabel" style="-fx-font-size: 16px;"/>
        </HBox>
    </VBox>
</VBox> 